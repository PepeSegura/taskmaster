{
    "name": "Python Taskmaster Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh"
    },
    "extensions": [
        "ms-python.python",
        "golang.go",
    ],
    "postCreateCommand": "chsh -s $(which zsh)",
    "appPort": ["8080:80"]
}